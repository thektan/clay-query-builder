{
	"csfConfig": {
		"js": {
			"lint": {
				"parserOptions": {
					"ecmaVersion": 7
				},
				"env": {
					"browser": true,
					"es6": true,
					"node": true
				},
				"parser": "babel-eslint",
				"rules": {
					"no-console": 0,
					"require-jsdoc": 0,
					"comma-dangle": 0,
					"eol-last": [
						2,
						"never"
					],
					"max-len": 0,
					"sort-vars": 2,
					"valid-jsdoc": 0,
					"no-invalid-this": 0,
					"no-mixed-spaces-and-tabs": [
						"warn",
						"smart-tabs"
					]
				}
			}
		}
	},
